<h1>Books一覧画面</h1>

<div class="continer px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <P>ここに画像表示</P>
        <%=image_tag @user.get_profile_image(100,100) %>
          <table>
            <body>
             <tr>
              <th>name</th>
              <th><%=@user.name %></th>
              </tr>
              <tr>
              <th>introduction</th>
              <th><%=@user.introduction %></th>
             </tr>
            </body>
          </table>
         
        <div class="row">
          <% if @user==current_user %>
            <%=link_to edit_user_path(@user) do %>
              <div class="btn btn-outline-secondary btn-block">
                ユーザー編集画面へ
              </div>
            <% end %>
          <% end %>
        </div>
        <h2>New book</h2>
         <%=form_with model: @book do |f|%>
          <h6>Title</h6>
           <%=f.text_field:title %>
          <h6>Opinion</h6>
           <%=f.text_area:body %>
           <%=f.submit 'Create Book' %>
         <% end %>
         
  </div>
　　<div class="col-md-8">
　　  <h2>Books</h2>
　　   <table class="table table-hover ">
　　     <tr>
　　       <th></th>
　　       <th>Title</th>
　　       <th>Opinion</th>
　　     </tr>
　　     
　　     <% @books.each do |book| %>
　　     <tr>
　　       <th><%=link_to user_path(book.user_id) do %><%=image_tag book.user.get_profile_image(80,80) %><% end %></th>
　　       <th><%=link_to book.title,book_path(book.id) %></th>
　　       <th><%=book.body %></th>
　　     </tr>
　　    <% end %>
　　   
　　   </table>
    </div>
  </div>
</div>