<% if @book.errors.any? %>
 <%=@book.errors.count %> errors prohibited this obj from being saved:
  
 <ul>
  <% @book .errors.full_messages.each do |message| %>
   <li><%=message %></li>
  <% end %>
 </ul>
<% end %>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%=render'list', book: @book, user: @user %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
    <table class="table table-hove table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
     </thead>
     <% @books.each do |book| %>
      <tbody>
       <tr>
        <th><%=link_to user_path(book.user_id) do %><%=image_tag @user.get_profile_image(80,80) %><% end %></th>
        <th><%=link_to book.title,book_path(book.id) %></th>
        <th><%=book.body %></th>
       </tr>
      </tbody>
     <% end %>
    </table>
  </div>
 </div>
</div>
