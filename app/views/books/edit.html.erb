<h1>Editing Book</h1>
<%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>
 <div class="form-group">
  <label for="inputTitle">Title</label><br>
  <%=f.text_field :title  %>
 </div>
 <div class="form-group">
  <label for="inputOpinion">Opinion</label><br>
  <%=f.text_area:body  %>
 </div>
 <div class="form-group">
  <%=f.submit "Update Book"%>
 </div>
<% end %>
<%=link_to "Show",book_path(@book.id) %>|<%=link_to "Back",books_path %>
  
 

