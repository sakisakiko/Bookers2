<div class="continer px-5">
  <div class="row">
      
   <div class="col-md-3">
     <%=render'list', book: @books, user: @user %>
   </div>
   
　  <div class="col-m-8">
　　     <h2>Book detail</h2>
　　   <table class="table ">
　　     <tr>
　　       <td><%=link_to user_path(@user.id) do %><%=image_tag @book.user.get_profile_image(100,100) %><% end %>
　　       </br><%=link_to user_path(@user.id) do %><%=@book.user.name %><% end %>
　　       </td>
　　       
　　       <td><%=link_to @book.title,book_path(@book.id) %></td>
　　       <td><%=@book.body %></td>
　　       <% if @book.user==current_user %>
　　       <td><%=link_to "Edit",edit_book_path(@book.id),class: 'btn btn-success'%></td>
　　       <td><%=link_to "Destroy",book_path(@book.id),method: :delete,class: 'btn btn-danger'%></td>
　　       <% end %>
　　    </tr>
　　   </table>
     </div>
     
  </div>
</div>
