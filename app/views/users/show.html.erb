<h1>user詳細画面</h1>

<div class="continer">
  <div class="row">
      
   <div class="col-md-3">
     <%=render'books/list', book: @book, user: @user %>
   </div>
   
　 <div class="col-md-8">
　　 <h2>Books</h2>
　　    <table class="table">
　　     <tr>
　　       <th></th>
　　       <th>Title</th>
　　       <th>Opinion</th>
　　       <th></th>
　　     </tr>
　　     
　　    <% @books.each do |book| %>
　　     <tr>
　　       <th><%=link_to user_path(book.user_id) do %><%=image_tag book.user.get_profile_image(80,80) %><% end %></th>
　　       <th><%=link_to book.title,book_path(book.id) %></th>
　　       <th><%=book.body %></th>
　　     </tr>
　　    <% end %>
　　   </table>　
     </div>
     
  </div>
</div>

