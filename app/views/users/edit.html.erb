<div class='container'>
 <div class='row'>
  <div class="col-lg-5 mx-auto">
   <h2>User info</h2>
   <% if @user.errors.any? %>
    <h3><%=@user.errors.count %>error prohibited this obj from being saved:</h3>
     <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
   <% end %>
   
   <%= form_with model: @user,method: :patch do |f| %>
      <div class="form-group">
       <label for="inputName">Name</label><br>
       <%=f.text_field :name,class: 'form-control'  %>
      </div>
      <div class="form-group">
       <label for="inputProfileImage">Image</label><br>
       <%=f.file_field:profile_image%>
      </div>
       <div class="form-group">
       <label for="inputIntroduction">Introduction</label><br>
       <%=f.text_area:introduction,class: 'form-control' %>
      </div>
       <%=f.submit "Update User",class: 'btn btn-secondary'%>
   <% end %>   
  </div>
 </div>
</div>


  
 


